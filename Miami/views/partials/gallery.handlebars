<div class = "row">
    {{#each images}}
    <div class="col-lg-3 gallery">
        <a href="#"  data-bs-toggle="modal" data-bs-target="#modal-{{@index}}">
        <img class = "img-fluid" src = "{{this.url}}" alt = "">
        </a>
    </div>

        <!-- Modal -->
        <div class="modal fade" id="modal-{{@index}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <img class = "img-fluid" src = "{{this.url}}" alt = "">
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    </div>

